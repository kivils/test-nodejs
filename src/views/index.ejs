<%- include('./_includes/head') %>

<%- include('./_includes/main-nav') %>

<header class="bg-white shadow">
    <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold text-gray-900">Hey, nice to see you!</h1>
    </div>
</header>
<main>
    <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <div class="px-4 py-6 sm:px-0">
            <% if (successMessage) { %>
                <p class="text-green-700 mb-4"><%= successMessage %></p>
            <% } %>
            <h2 class="font-sans text-xl text-gray-900 mb-4">This is a place where you can easily:</h2>
            <ul class="list-disc list-inside mb-4">
                <li>
                    <a class="text-gray-900 underline hover:text-gray-600 hover:no-underline" href="/shop">check, choose and purchase our amazing products</a>
                </li>
                <% if(!isLogged) { %>
                <li>
                    <a class="text-gray-900 underline hover:text-gray-600 hover:no-underline" href="/users/signup">register</a> or
                    <a class="text-gray-900 underline hover:text-gray-600 hover:no-underline" href="/users/login">login</a>
                </li>
                <% } %>
                <li>
                    <a class="text-gray-900 underline hover:text-gray-600 hover:no-underline" href="/users">see other users here</a>
                </li>
            </ul>
            <h2 class="font-sans text-xl text-gray-900 mb-4">Our most popular items here</h2>
            <p class="mb-4">TODO: Add product list</p>
        </div>
    </div>
</main>

