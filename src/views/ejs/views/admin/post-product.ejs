<%- include('../../includes/head') %>

<%- include('../../includes/main-nav') %>

<header class="bg-white shadow">
    <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold text-gray-900">
            <%= pageTitle %><% if(product) { %> <span style="color: green;"> <%= product.title %></span> <% } %>
        </h1>
    </div>
</header>
<main>
    <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <% if(submitted) { %>
            <ul class="grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
                <li class="group relative">
                    <%- include('../../includes/product-item', { product: product, isAdmin: true }) %>
                </li>
            </ul>
        <% } else { %>
            <%- include('../../includes/product-form', { product: product })%>
        <% } %>
    </div>
</main>

<%- include('../../includes/footer') %>
